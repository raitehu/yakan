@import "bootstrap";

$text_color_1: white;
$text_color_2: black;

body
{
  font-family:'Lato', 'Sawarabi mincho', 'Yu Mincho', '游ゴシック体', 'Yu Gothic Medium', YuGothic, 'ヒラギノ角ゴ ProN', 'Hiragino Kaku Gothic ProN', 'メイリオ', Meiryo, 'ＭＳ Ｐゴシック', 'MS PGothic', sans-serif;
  background-image: url(<%= asset_path("background.jpg") %>);
  background-size: cover;
  background-attachment: fixed;
  background-repeat: no-repeat;
  background-position: center center;
  position: relative;
}

/* header */
#logo 
{
  float: left;
  left: 0.2em;
  width: 2.0em;
  height: 2.0em;
  margin-top: 0em;
  margin-left: 1em;
  margin-bottom: 0em;
  padding: 0em;
}

.navbar
{
  padding: 0.1em;
}

.navbar-inverse
{
  background-color: rgba(0,0,0,0.4);
  color: white;
  border: none;
}

a:link    { color: $text_color_1; }
a:visited { color: $text_color_1; }
a:hover   { color: $text_color_1; }
a:active  { color: $text_color_1; }

.navbar-toggler .navbar-toggler-icon
{
  background-image: url(<%= asset_path("hamburger.png") %>);
  width: 2.0em;
  height: 2.0em;
  margin-top: 0em;
  margin-right: 1em;
  margin-bottom: 0em;
  padding: 0em;
}

.container
{
  width: 100%;
  padding: 0px;
}

.container-fluid
{
  width: 100%;
  padding: 0px;
  margin: 0px;
}

#yield
{
  margin: 0em;
  padding: 0em;
}

#top
{
  margin: 0em;
  padding: 0em;
  height: 800px;
}

#top-image
{
  margin-top: 60px;
}

#performance
{
  background: rgba(0, 0, 0, 0.8);
  color: $text_color_1;
  padding-top: 50px;
  padding-bottom: 50px;
}

#resume
{
  background: rgba(150, 150, 150, 0.6);
  color: $text_color_2;
  padding-top: 50px;
  padding-bottom: 50px;
}

#practice
{
  background: rgba(0, 0, 0, 0.9);
  color: $text_color_1;
  padding-top: 50px;
  padding-bottom: 50px;
}

#contact
{
  background: rgba(150, 150, 150, 0.6);
  color: $text_color_2;
  padding-top: 50px;
  padding-bottom: 50px;
}

.footer 
{
  padding-top: 50px;
  width: 100%;
  height: 300px;
  background-color: black;
  color: white;
  text-align: center;
  margin: 0px;
}